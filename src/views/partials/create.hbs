<main class="mt-5">
    <div class="container">
        <div class="card mx-auto">
            <div class="card-header">
                <h1 class="text-center">Crear Usuario</h1>
            </div>
            <div class="card-body">
                <form action="/create" method="POST">
                    <div class="form-group">
                        <label for="firstName">Nombre</label>
                        <input type="text" class="form-control" id="firstName" name="name.first" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Apellido</label>
                        <input type="text" class="form-control" id="lastName" name="name.last" required>
                    </div>
                    <!-- Aquí puedes agregar más campos para los demás detalles del usuario -->
                    <button type="submit" class="btn btn-primary">Crear</button>
                </form>
            </div>
        </div>
    </div>
</main>